<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="250dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iconBook"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="180dp" />

        <vn.mcbooks.mcbooks.utils.AwesomeButton
            android:id="@+id/btnRead"
            android:layout_alignParentBottom="true"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:text="ĐỌC THỬ"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@drawable/button_stoke"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/favorite_stroke"
            android:id="@+id/favorite"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Hướng dẫn ôn tập và kiểm tra Tiếng Anh lớp 7 - Tập 2"/>
        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:id="@+id/shortDetail"
            android:layout_below="@id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="NXB: Đại Học Quốc Gia Hà Nội\nTác giả: The Windy\nSố trang: 136\nKích thước: 17 x 24cm"/>


        <TextView
            android:id="@+id/ratingStar"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="5.0"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/tmp_starIcon"
            android:layout_alignTop="@id/ratingStar"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/ratingStar"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/ic_grade_black_18px"/>



        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38.000d"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/background_border"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignBaseline="@id/ratingStar"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/border_red"
            android:id="@+id/layout_gift"
            android:layout_below="@id/shortDetail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bộ quà tặng"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:id="@+id/btnSaleOffs"
                android:src="@drawable/gift"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
