<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    tools:context="vn.mcbooks.mcbooks.fragment.BookDetailHeader">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="180dp" />
        <Button
            android:id="@+id/btnRead"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:textAllCaps="false"
            android:text="Đọc thử"
            android:drawablePadding="-30dp"
            android:paddingLeft="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:drawableLeft="@drawable/open_magazine"
            android:background="@drawable/button_stoke"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Hướng dẫn ôn tập và kiểm tra Tiếng Anh lớp 7 - Tập 2"/>
        <TextView
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:id="@+id/shortDetail"
            android:layout_below="@id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="NXB: Đại Học Quốc Gia Hà Nội\nTác giả: The Windy\nSố trang: 136\nKích thước: 17 x 24cm"/>
        <RatingBar
            android:id="@+id/ratingStar"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:layout_below="@id/shortDetail"/>
        <TextView
            android:id="@+id/price"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38.000d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/background_border"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@id/ratingStar"/>
        <Button
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/gift"
            android:layout_below="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khuyến Mãi"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_light"
            android:layout_centerHorizontal="true"
            android:drawablePadding="20dp"
            android:background="@android:color/transparent"
            android:scaleY="?android:borderlessButtonStyle"/>
    </RelativeLayout>

</LinearLayout>
