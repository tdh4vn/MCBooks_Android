<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/contentPanel">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_marginLeft="0dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>
    <TextView
        android:id="@+id/txtUsername"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listening phrase 1"
        android:textStyle="bold" />

    <vn.mcbooks.mcbooks.utils.AwesomeTextView
        android:layout_below="@id/txtUsername"
        android:id="@+id/ratingStar"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/star_color"
        android:text="&#xF006;&#xf006;&#xf006;&#xf006;&#xf006;"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/timeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:layout_toEndOf="@id/ratingStar"
        android:layout_marginLeft="3dp"
        android:text="01/01/1995"
        android:layout_alignBaseline="@id/ratingStar"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_below="@id/ratingStar"
        android:layout_marginTop="5dp"
        android:text="1:32"
        android:textSize="16sp"
        android:id="@+id/txtComment"
        android:freezesText="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>